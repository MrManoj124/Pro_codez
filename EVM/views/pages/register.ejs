<!-- page: register.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Register - University Event Management</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <h1>Register</h1>

    <!-- Flash Messages -->
    <% if (success_msg) { %>
      <div class="alert success"><%= success_msg %></div>
    <% } %>
    <% if (error_msg) { %>
      <div class="alert error"><%= error_msg %></div>
    <% } %>
    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
      <% errors.forEach(function(error) { %>
        <div class="alert error"><%= error.msg %></div>
      <% }); %>
    <% } %>

    <form action="/register" method="POST">
      <div class="form-group">
        <label>Name:</label><br>
        <input type="text" name="name" value="<%= typeof name !== 'undefined' ? name : '' %>" required>
      </div>

      <div class="form-group">
        <label>Email:</label>
        <input type="email" name="email" value="<%= typeof email !== 'undefined' ? email : '' %>" required>
      </div>

      <div class="form-group">
        <label>Password:</label>
        <input type="password" name="password" required>
      </div>

      <div class="form-group">
        <label>Confirm Password:</label>
        <input type="password" name="password2" required>
      </div>

      <div class="form-group">
        <label>Role:</label>
        <% let selectedRole = typeof role !== 'undefined' ? role : ''; %>

      <select name="role" required>
         <option value="student" <%= selectedRole === 'student' ? 'selected' : '' %>>Student</option>
         <option value="organizer" <%= selectedRole === 'organizer' ? 'selected' : '' %>>Organizer</option>
         <option value="admin" <%= selectedRole === 'admin' ? 'selected' : '' %>>Admin</option>
      </select>
      </div>

      <button type="submit">Register</button>
    </form>

    <p>Already have an account? <a href="/login">Login here</a></p>
  </div>
</body>
</html>
